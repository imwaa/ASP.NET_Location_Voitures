@model IEnumerable<VoitureLocation.Models.t_client>

@{
    ViewBag.Title = "Index";
}

<style>
    h1{
        margin-top:3%;
    }
    .btn {
       margin: 5% 0 1% 0;
    }
</style>

<h1>Liste de clients</h1>

<button class="btn btn-success">
        @Html.ActionLink("Ajouter un client", "Create")
</button>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.client_nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.client_prenom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.client_num_identite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.client_adresse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.client_mobile)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.client_nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.client_prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.client_num_identite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.client_adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.client_mobile)
            </td>
            <td>
                <button class="btn btn-success btn-sm">
                    @Html.ActionLink("Modifier", "Edit", new { id = item.id })
                </button>
                <button class="btn btn-info btn-sm">
                    @Html.ActionLink("Details", "Details", new { id = item.id })
                </button>
                <button class="btn btn-danger btn-sm">
                    @Html.ActionLink("Effacer", "Delete", new { id = item.id })
                </button>

            </td>
        </tr>
    }

</table>
