@model IEnumerable<VoitureLocation.Models.t_voiture>

@{
    ViewBag.Title = "Index";
}

<style>
    h1 {
        margin-top: 3%;
    }

    .btn {
        margin: 5% 0 1% 0;
    }
</style>

<h1>Liste de voiture</h1>

<button class="btn btn-success">
    @Html.ActionLink("Ajouter une voiture", "Create")
</button>

<table class="table table-striped table-hover">
    <tr class="bg-success">
        <th>
            @Html.DisplayNameFor(model => model.voiture_num)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.voiture_marque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.voiture_modele)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.voiture_immatriculation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.disponibilite)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.voiture_num)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.voiture_marque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.voiture_modele)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.voiture_immatriculation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.disponibilite)
            </td>
            <td>
                <button class="btn btn-success btn-sm">
                    @Html.ActionLink("Modifier", "Edit", new { id = item.id })
                </button>
                <button class="btn btn-info btn-sm">
                    @Html.ActionLink("Details", "Details", new { id = item.id })
                </button>
                <button class="btn btn-danger btn-sm">
                    @Html.ActionLink("Effacer", "Delete", new { id = item.id })
                </button>
                
            </td>
        </tr>
    }

</table>
